{

  "ecmaFeatures": {
    "modules": true,
    "spread" : true,
    "restParams" : true,
    "experimentalObjectRestSpread":true
  },
  "env" : {
    "browser" : true,
    "node" : true,
    "es6" : true
  },
  "rules" : {
    "no-unused-vars" : 2,
    "no-undef" : 2
  },
  "parserOptions": {
    "sourceType": "module",
    "parser": "babel-eslint",
    "ecmaFeatures": {
      "modules": true,
      "spread" : true,
      "restParams" : true,
      "experimentalObjectRestSpread":true
    }
  },
  "plugins": [
    "react"
  ]
}